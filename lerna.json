{
  "useWorkspaces": true,
  "workspaces": [
      "packages/*"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "nohoist": ["@wya/vue-scaffold"],
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent"
}