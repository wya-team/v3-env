{
  "name": "@wya/vue-scaffold",
  "version": "2.0.0",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run prompt && npm run all",
    "serve": "node --max_old_space_size=8192 ./node_modules/.bin/vite --host",
    "build": "node --max_old_space_size=8192 ./node_modules/.bin/vite build",
    "preview": "vite preview",
    "clean": "rm -rf ./node_modules/.cache ./node_modules/.vite ./dist",
    "copy": "echo 'end'",
    "prompt": "node ./build/script/prompt.js",
    "lint": "esw src build config --ext .vue,.js,.jsx --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch --fix",
    "lint:style": "stylelint --fix 'src/**/*.{vue,css,scss}' --cache --cache-location node_modules/.cache/stylelint/",
    "all": "cross-env NODE_ENV=development npm-run-all --parallel --race --continue-on-error lint:watch serve",
    "test": "echo 'todo'",
    "add": "wya-v3 add",
    "create": "wya-v3 add --config ./config/modules.config.js"
  },
  "author": "wya-team",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@wya/http": "^1.5.0",
    "@wya/ps": "^1.0.3",
    "@wya/qrcode": "^1.0.2",
    "@wya/sass": "^2.0.0",
    "@wya/utils": "^1.6.5",
    "@wya/vc": "^3.0.0-alpha.7",
    "@wya/vcc": "^0.0.2",
    "echarts": "^5.1.2",
    "html2canvas": "^1.0.0",
    "photoswipe": "^4.1.3",
    "quill": "^1.3.7",
    "vue": "^3.2.13",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^1.5.0",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vitejs/plugin-vue-jsx": "^1.1.7",
    "@vue/compiler-sfc": "^3.2.13",
    "@wya/vue-cli": "^2.0.0-alpha.1",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "cp-cli": "^2.0.0",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-plugin-vue": "^7.8.0",
    "eslint-watch": "^7.0.0",
    "fs-extra": "^9.1.0",
    "husky": "^5.2.0",
    "inquirer": "^8.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.4",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^4.2.2",
    "sass": "^1.32.8",
    "shelljs": "^0.8.4",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "vite": "^2.4.4",
    "vue-eslint-parser": "^7.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./build/srcipt/commit-lint"
    }
  },
  "lint-staged": {
    "{src,config,build}/**/*.{js,jsx,vue}": [
      "esw --ext '.vue,.js,.jsx' --fix",
      "git add"
    ],
    "*.md": [
      "esw --ext '.md' --fix",
      "git add"
    ],
    "src/**/*.{css,scss,vue}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
